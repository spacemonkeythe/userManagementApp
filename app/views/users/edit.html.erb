<% provide(:title, "Edit user") %>
<h1 class="form-signin-heading center">Update your profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for @user, html: {class: "form-signup" } do |f| %>
      <%= render partial: "shared/error_messages", locals: { user: @user } %>
      <div class="form-group">
        <%= f.label :name, class: "control-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "control-label" %>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <%= f.submit "Update my account", class: "btn btn-large btn-primary" %>

      <div class="pull-right">
        <%= link_to "Cancel", user_path(@user) %>
      </div>

      <% if current_user?(@user) %>
    |   <%= link_to "delete", @user, method: :delete, data: { confirm: "You sure?" } %>
      <% end %>
    <% end %> 

  </div>
</div>